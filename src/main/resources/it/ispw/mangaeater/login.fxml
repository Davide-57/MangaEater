<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox fillWidth="false" prefHeight="378.0" prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.mangaeater.LoginController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
   <VBox alignment="TOP_CENTER" prefHeight="243.0" prefWidth="340.0">
      <children>
         <Label text="LOGIN" textFill="#ffb84d">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
         <VBox prefHeight="104.0" prefWidth="340.0">
            <children>
               <Label fx:id="labelEmail" text="Email">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               <TextField fx:id="email" style="-fx-border-color: #ffb84d; -fx-background-radius: 10; -fx-border-radius: 10;">
                  <effect>
                     <InnerShadow>
                        <color>
                           <Color red="1.0" green="0.7215686440467834" blue="0.3019607961177826" />
                        </color>
                     </InnerShadow>
                  </effect>
               </TextField>
            </children>
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="25.0" />
            </padding>
         </VBox>
         <VBox prefHeight="91.0" prefWidth="340.0">
            <children>
               <Label fx:id="labelPsw" text="Password">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               <TextField fx:id="password" focusTraversable="false" style="-fx-border-color: #ffb84d; -fx-background-radius: 10; -fx-border-radius: 10;">
                  <effect>
                     <InnerShadow>
                        <color>
                           <Color red="1.0" green="0.7215686440467834" blue="0.3019607961177826" />
                        </color>
                     </InnerShadow>
                  </effect>
               </TextField>
            </children>
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="25.0" />
            </padding>
         </VBox>
      </children>
   </VBox>
   <HBox alignment="CENTER" prefHeight="67.0" prefWidth="340.0" translateY="10.0">
      <children>
          <Button fx:id="loginButton" onAction="#onLoginButtonClick" prefHeight="39.0" prefWidth="107.0" style="-fx-background-color: #ffb84d; -fx-border-radius: 10; -fx-background-radius: 10;" text="Accedi">
            <font>
               <Font name="System Bold" size="12.0" />
            </font>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
      </children>
   </HBox>
</VBox>
